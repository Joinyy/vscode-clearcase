{
    "name": "vscode-clearcase",
    "displayName": "Unofficial ClearCase SCM Commands",
    "description": "Unofficial support for IBM Rational ClearCase most common commands",
    "version": "1.1.3",
    "publisher": "OpenNingia",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/OpenNingia/vscode-clearcase.git"
    },
    "galleryBanner": {
        "color": "#FF524C",
        "theme": "dark"
    },
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "scm",
        "clearcase",
        "keybindings"
    ],
    "activationEvents": [
        "onCommand:extension.ccExplorer",
        "onCommand:extension.ccCheckout",
        "onCommand:extension.ccCheckin",
        "onCommand:extension.ccVersionTree",
        "onCommand:extension.ccComparePrevious",
        "onCommand:extension.ccUndoCheckout"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.ccExplorer",
                "title": "ClearCase: Explorer"
            },
            {
                "command": "extension.ccCheckout",
                "title": "ClearCase: Checkout"
            },
            {
                "command": "extension.ccCheckin",
                "title": "ClearCase: Checkin"
            },
            {
                "command": "extension.ccVersionTree",
                "title": "ClearCase: Version Tree"
            },
            {
                "command": "extension.ccComparePrevious",
                "title": "ClearCase: Compare with previous version"
            },
            {
                "command": "extension.ccUndoCheckout",
                "title": "ClearCase: Undo Checkout"
            }
        ],
        "keybindings": [
            {
                "command": "extension.ccExplorer",
                "key": "ctrl+j ctrl+e"
            },
            {
                "command": "extension.ccCheckout",
                "key": "ctrl+j ctrl+o"
            },
            {
                "command": "extension.ccCheckin",
                "key": "ctrl+j ctrl+i"
            },
            {
                "command": "extension.ccVersionTree",
                "key": "ctrl+j ctrl+v"
            },
            {
                "command": "extension.ccComparePrevious",
                "key": "ctrl+j ctrl+p"
            },
            {
                "command": "extension.ccUndoCheckout",
                "key": "ctrl+j ctrl+u"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "child_process": "^1.0.2"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}